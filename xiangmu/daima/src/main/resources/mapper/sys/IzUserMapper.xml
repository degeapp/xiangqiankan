<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jianz.degeapp.dao.IzUserDao">
	<!-- 根据用户名查询个人信息 -->
	<select id="findIzUserByUserName" resultType="map">
		select * from iz_user where username=#{username}
	</select>
	<!-- 修改数据 -->
	<update id="updateByUserName" parameterType="com.jianz.degeapp.entity.Izuser">
		update iz_user set 
		name=#{name},phone=#{phone},gender=#{gender},
		qq=#{qq},mail=#{mail},healthy=#{healthy},
		learn=#{learn},jobin=#{jobin},city=#{city},
		experience=#{experience} 
		where username=#{username}
	</update>
	<insert id="insertObjectUserName">
		insert into iz_user 
		(username)
		values
		(#{username})
	</insert>
</mapper>